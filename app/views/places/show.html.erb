

<% if @current_user %>
  <h1><%= @place.name %></h1>
  <p>
    <a class="btn btn-primary" href="/posts/new?place_id=<%= @place.id %>">New Post</a>
  </p>
  <h2>My Posts</h2>
  <div class="row">
    <% for post in @place.posts.where({user_id: @current_user.id}) %>
      <div class="col-sm-4">
        <h3><%= post.title %></h3>
        <h4><%= post.posted_on %></h4>
        <p><%= post.description %></p>
        
       <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
          <img src="<%= post.uploaded_image %>" class="img-fluid" >
        <% end %>
      </div>    
    <% end %>
  </div>
  

  <p>
    <a class="btn btn-primary" href="/places">Back to All Places</a>
  </p>

<% else %>
Please login
<%end %>